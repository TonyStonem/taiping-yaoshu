<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEEEEE"
    tools:context="xjw.app.hencoder.module.view.custom.CustomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/base_head" />

        <xjw.app.hencoder.module.view.custom.customview_o.ArcView
            android:layout_width="@dimen/dp360"
            android:layout_height="@dimen/dp360" />

        <xjw.app.hencoder.module.view.custom.customview_o.ArcsView
            android:layout_width="@dimen/dp360"
            android:layout_height="@dimen/dp360" />

        <xjw.app.hencoder.module.view.custom.customview_o.RectsView
            android:layout_width="@dimen/dp360"
            android:layout_height="@dimen/dp360" />

        <ImageView
            android:src="@mipmap/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xjw.app.hencoder.module.view.custom.customview_o.TestColorFilterView
            android:layout_width="@dimen/dp360"
            android:layout_height="@dimen/dp360" />

        <xjw.app.hencoder.module.view.custom.customview_t.ShaderLGView
            android:layout_width="@dimen/dp360"
            android:layout_height="@dimen/dp360" />
        <xjw.app.hencoder.module.view.custom.customview_t.ShadowLayerView
            android:layout_width="@dimen/dp360"
            android:layout_height="@dimen/dp360" />


    </LinearLayout>


</ScrollView>
